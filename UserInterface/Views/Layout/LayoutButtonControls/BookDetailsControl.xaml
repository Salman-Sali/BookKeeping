<UserControl x:Class="Bk.UserInterface.Views.Layout.LayoutButtonControls.BookDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bk.UserInterface.Views.Layout.LayoutButtonControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="BookNameText" Margin="5" Foreground="Black"/>

        <Button x:Name="AddEntryButton" Margin="5" Click="AddEntryButton_Click">
            <Viewbox Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                <TextBlock>Add Entry</TextBlock>
            </Viewbox>

        </Button>
        <Button x:Name="BookDetailsButton" Grid.Column="1" Margin="5" Click="BookDetailsButton_Click">
            <Viewbox Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                <TextBlock>Book Details</TextBlock>
            </Viewbox>
        </Button>
    </Grid>
</UserControl>
